    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "test Program",
            "program": "${workspaceFolder}/common_js_test/b.js",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "blog-1 Program",
            "program": "${workspaceFolder}/blog-1/bin/www.js",
            "cwd": "${workspaceFolder}",
            "serverReadyAction": {
                "pattern": "listening on port ([0-9]+)",
                "uriFormat": "http://localhost:8080",
                "action": "openExternally"
              }
        },
        {  
            "type": "node",
            "request": "launch",
            "name": "blog-express",
            "program": "${workspaceFolder}/blog-express/bin/www",
            "cwd": "${workspaceFolder}",
            "serverReadyAction": {
                "pattern": "listening on port ([0-9]+)",
                "uriFormat": "http://localhost:s%",
                // "action": "debugWithChrome"
                "action": "openExternally"
              }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "crypto Program",
            "program": "${workspaceFolder}/crypto_test/crypto.js",
        },
    ]
}

